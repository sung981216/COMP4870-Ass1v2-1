@model IEnumerable<assignment01.Models.People>

@{
  ViewData["Title"] = "Player Info";
}

<div>
  <h1 class="display-4">@ViewData["Title"]</h1>


  <table class="table table-striped table-bordered">
    <tr>
      <th>@Html.DisplayNameFor(model => model.fullName)</th>
      <th>@Html.DisplayNameFor(model => model.currentTeam.name)</th>
      <th>@Html.DisplayNameFor(model => model.currentAge)</th>
      <th></th>
    </tr>
    @foreach (var item in Model)
    {
      <tr>
        <td>@item.fullName</td>
        <td>@item.currentTeam.name</td>
        <td>@item.currentAge</td> 
        @* <td style="text-align: center;">
          <a asp-action="Details" asp-route-id="@item.id" class="btn btn-sm btn-info">Details of team</a>
        </td>  *@
      </tr>
      }
  </table>
</div>